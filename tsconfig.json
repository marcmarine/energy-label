{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "esModuleInterop": true
  },
  "include": ["src/index.ts"]
}
